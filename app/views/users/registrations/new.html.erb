<% title "注册" %> 
<strong style="color: #999; margin-left: 12px;"><img src="/images/icon2.png" align="absmiddle" style="margin-top: -4px;" />  <a href="/">Hi, Start</a></strong> 
<div class="sep"></div>
<div id="Wrapper">
<h3>Sign up</h3>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name, :class =>'sl2' %></p>

  <p><%= f.label :email %><br />
  <%= f.text_field :email, :class =>'sl2' %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class =>'sl2' %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class =>'sl2' %></p>

  <p><%= f.submit "Sign up", :class=>'awesome large blue button' %></p>
<% end %>
<p><a href="/login">Sign in</a></p>
</div>