<% title "登录" %>  
<strong style="color: #999; margin-left: 12px;"><img src="/images/icon2.png" align="absmiddle" style="margin-top: -4px;" />  <a href="/">Hi, Start</a></strong> 
<div class="sep"></div>
<div id="Wrapper">
	
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.text_field :email, :class =>'sl2' %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class =>'sl2' %>
  <% if devise_mapping.rememberable? -%>
<br />
   <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>
</p>

  <p><%= f.submit "Sign in", :class=>'awesome large blue button' %></p>
<% end %>

<p><a href="/signup">Sign up</a></p>
</div>